<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/colorPrimaryDark"
    android:clickable="true"
    android:focusable="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightGray"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="190dp"
            android:background="#FFFF"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/reservation_background" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/careImage"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="18dp"
                    android:src="@drawable/empty_user"
                    />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:stretchColumns="*">

                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:textSize="15sp" />


                </TableRow>

                    <TableRow
                        android:layout_width="0dp"
                        android:layout_height="match_parent" >
                        <TextView
                            android:id="@+id/title_in_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="8dp"
                            android:text="CAREGIVER NAME"
                            android:textSize="20sp"
                            android:layout_gravity="center"
                            android:textStyle="bold" />


                    </TableRow>

                    <TableRow
                        android:layout_width="0dp"
                        android:layout_height="match_parent" >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="8dp"
                            android:textSize="15sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="0dp"
                        android:layout_height="match_parent" >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="8dp"
                            android:textSize="15sp" />

                    </TableRow>


                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="match_parent" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:textColor="@color/red"
                        android:text="Select..."
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    </TableRow>
                </TableLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="315dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:id="@+id/resumeDate"
                        android:layout_width="54dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="8dp"
                        android:text="17 Apr 2019 00:00"
                        android:textSize="25sp"
                        android:textStyle="bold"/>


                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:stretchColumns="*">
                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="match_parent" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:textSize="15sp" />

                </TableRow>


                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="match_parent" >

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:text="Patient Name:"
                        android:textSize="20sp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:windowSoftInputMode="adjustResize|stateAlwaysHidden"/>


                </TableRow>

                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="match_parent" >

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:textSize="20sp" />


                </TableRow>


                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="match_parent" >

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:text="Room Number:"
                        android:textSize="20sp" />

                    <NumberPicker
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:descendantFocusability="blocksDescendants"
                        >

                    </NumberPicker>

                </TableRow>
            </TableLayout>

    </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/red"
        android:padding="12dp"
        android:text="RESERVE"
        android:textColor="@color/white"
        android:textSize="20dp" />

</android.support.design.widget.CoordinatorLayout>