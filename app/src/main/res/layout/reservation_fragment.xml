<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reservationLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/colorPrimaryDark"
    android:clickable="true"
    android:focusable="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightGray"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/reservation_back_image"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:background="#FFFF"
            android:scaleType="centerCrop"
            />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/caregiverInfo"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/careImage"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="18dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:stretchColumns="*">
                        <TableRow
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/caregiverName_frag"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="8dp"
                                android:text="Caregiver Name"
                                android:textSize="25sp"
                                android:layout_gravity="left"
                                android:textStyle="bold" />
                        </TableRow>
                    </TableLayout>
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:layout_marginLeft="20dp"
                        android:stretchColumns="1">

                        <TableRow
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/mail_icon"
                                android:layout_width="17dp"
                                android:layout_height="17dp"
                                android:layout_gravity="left"
                                 />
                            <TextView
                                android:id="@+id/care_mail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="7dp"
                                android:textSize="16sp"
                                android:text="mail@address.com"
                                android:textStyle="italic"/>

                        </TableRow>

                        <TableRow
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="7dp">

                        <ImageView
                            android:id="@+id/phone_icon"
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:layout_gravity="left"
                             />
                        <TextView
                            android:id="@+id/care_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:textSize="16sp"
                            android:text="Phone Number"
                            android:textStyle="italic"/>
                        </TableRow>

                        <TableRow
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="7dp">

                            <ImageView
                                android:id="@+id/position_icon"
                                android:layout_width="17dp"
                                android:layout_height="17dp"
                                android:layout_gravity="left"
                                 />
                            <TextView
                                android:id="@+id/care_city"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="7dp"
                                android:textSize="16sp"
                                android:text="City"
                                android:textStyle="italic"/>
                        </TableRow>
                    </TableLayout>
                    <TableLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="30dp"
                        android:stretchColumns="*">
                    <TableRow
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="88dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text="Select..."
                            android:textColor="@color/red"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        </TableRow>
                    </TableLayout>
                </LinearLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="315dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:id="@+id/resumeDate"
                        android:layout_width="54dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="8dp"
                        android:text="17 Apr 2019 00:00"
                        android:textSize="25sp"
                        android:textStyle="bold"/>


                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:stretchColumns="1">

                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="match_parent" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:text="Patient Name:"
                        android:textSize="20sp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:layout_marginLeft="5dp"
                        android:windowSoftInputMode="adjustResize|stateAlwaysHidden"/>


                </TableRow>
            </TableLayout>
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:stretchColumns="1">

                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:layout_gravity="center_vertical"
                        android:text="Room Number:"
                        android:textSize="20sp" />

                    <NumberPicker
                        android:id="@+id/number_picker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:descendantFocusability="blocksDescendants"
                        android:orientation="horizontal"
                        android:layout_gravity="top"
                        android:scaleX="0.75"
                        android:scaleY="0.75">
                    </NumberPicker>

                </TableRow>
            </TableLayout>
    </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">
    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:padding="12dp"
        android:text="RESERVE"
        android:textColor="@color/white"
        android:textSize="20dp" />
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>